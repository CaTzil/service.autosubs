<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.autosubs"
    name="AutoSubs" version="0.0.2" provider-name="">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
    <import addon="script.xbmc.subtitles" version="3.0.0"/>
  </requires>
  <extension point="xbmc.service" library="default.py" start="login"></extension> 
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Auto Search for Subtitles on Play</summary>
    <description lang="en">Auto Search for Subtitles on Playback start if no subs are found, only works with XBMC Subtitles</description>
    <platform>all</platform>
    <language>en</language>
  </extension>
</addon>
